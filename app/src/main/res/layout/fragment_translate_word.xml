<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="viewModel"
            type="com.paulacr.wordslearning.feature.translation.TranslateWordViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.translation.TranslateWordFragment">

        <TextView
            android:id="@+id/word"
            style="@style/Word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.word}"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/translation"
            tools:layout_editor_absoluteY="170dp"
            tools:text="Word"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/translation"
            style="@style/TranslateWordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="no"
            android:onTextChanged="@{viewModel.onTranslateWordTextChanged}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/word"/>

        <ImageView
            android:id="@+id/clearTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="6dp"
            android:contentDescription="@string/accessibility_clear_text_button"
            android:onClick="@{() -> viewModel.onClearTextClicked()}"
            android:src="@android:drawable/ic_notification_clear_all"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/translation"
            app:layout_constraintTop_toTopOf="@id/translation" />

        <ImageView
            android:id="@+id/translateButtonPlaceholder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/accessibility_translate_button"
            android:src="@drawable/ic_tick"
            app:layout_constraintBottom_toBottomOf="@id/translation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translation" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/translateAnimation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintBottom_toBottomOf="@+id/translation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/translation"
            app:lottie_autoPlay="false"
            app:lottie_rawRes="@raw/success" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>